{% extends '@Lunch/layout.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                Participants
                <small>List</small>
            </h1>
        </div>
    </div>

    {% include '@Lunch/Parts/flash.html.twig' %}

    <div class="row">
        <div class="col-lg-6">
            <h3>Add new</h3>
            {{ form_start(form, {action: path('participant_create')}) }}
            {{ form_widget(form) }}
            {{ form_end(form) }}
        </div>
        <div class="col-lg-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title"><i class="fa fa-clock-o fa-fw"></i> Participants list</h3>
                </div>
                <div class="panel-body">
                    <div class="list-group">
                        {% for participant in participants %}
                            <a href="{{ url('participant_edit', {'id': participant.id}) }}" class="list-group-item">
                                <span class="badge">{{ participant.department }}</span><i class="fa fa-fw fa-user"></i> {{ participant.email }}
                            </a>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}